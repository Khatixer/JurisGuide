# Production Environment Configuration for JurisGuide Platform

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
CLIENT_URL=https://jurisguide.com

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=jurisguide_prod
DB_USER=jurisguide_user
DB_PASSWORD=your-secure-db-password

# Redis Configuration
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key-here

# External API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Payment Gateway Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Communication Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@jurisguide.com

# Legal Database APIs
WESTLAW_API_KEY=your-westlaw-api-key
LEXISNEXIS_API_KEY=your-lexisnexis-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/jurisguide.crt
SSL_KEY_PATH=/etc/ssl/private/jurisguide.key

# CORS Configuration
ALLOWED_ORIGINS=https://jurisguide.com,https://www.jurisguide.com,https://admin.jurisguide.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/application.log

# Instance Configuration (for load balancing)
INSTANCE_ID=app1

# Grafana Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_SCHEDULE=0 2 * * *