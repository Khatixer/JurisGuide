{
  "name": "client-portal-server",
  "version": "1.0.0",
  "description": "Backend API for client request portal",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node index.ts",
    "start": "ts-node index.ts",
    "build": "tsc",
    "migrate": "ts-node database/migrations/migrate.ts",
    "migrate:prod": "NODE_ENV=production ts-node database/migrations/migrate.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "ts-node tests/run-tests.ts unit",
    "test:integration": "ts-node tests/run-tests.ts integration",
    "test:database": "ts-node tests/run-tests.ts database",
    "test:api": "ts-node tests/run-tests.ts api",
    "test:ai": "ts-node tests/run-tests.ts ai",
    "test:external": "ts-node tests/run-tests.ts external",
    "test:all": "ts-node tests/run-tests.ts --all --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:stress": "artillery run tests/performance/stress-test.yml",
    "test:performance:report": "artillery run tests/performance/load-test.yml --output performance-report.json && artillery report performance-report.json",
    "test:security": "ts-node tests/security/security-test-runner.ts",
    "test:security:auth": "ts-node tests/security/security-test-runner.ts authentication",
    "test:security:data": "ts-node tests/security/security-test-runner.ts data-protection",
    "test:security:bias": "ts-node tests/security/security-test-runner.ts ai-bias",
    "test:security:full": "ts-node tests/security/security-test-runner.ts --penetration"
  },
  "dependencies": {
    "@google-cloud/translate": "^9.2.0",
    "@sendgrid/mail": "^8.1.5",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.16.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "stripe": "^18.5.0",
    "twilio": "^5.8.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "artillery": "^2.0.24",
    "jest": "^30.1.1",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
